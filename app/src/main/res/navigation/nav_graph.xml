<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph.xml"
    app:startDestination="@id/weatherFragment">


    <fragment
        android:id="@+id/weatherFragment"
        android:name="com.geektech.weatherapp.ui.weatherFragments.WeatherFragment"
        android:label="fragment_weather"
        tools:layout="@layout/fragment_weather">
        <!--<argument
            android:name="city"
            android:defaultValue="Bishkek"
            app:argType="string"
            app:nullable="true" />-->
        <argument
            android:name="lat"
            android:defaultValue=""
            app:argType="string"
            app:nullable="true" />
        <argument
            android:name="lon"
            android:defaultValue=""
            app:argType="string"
            app:nullable="true" />
        <argument
            android:defaultValue="0"
            android:name="position"
            app:argType="integer" />
        <action
            android:id="@+id/action_weatherFragment_to_searchFragment"
            app:destination="@id/searchFragment" />
        <action
            android:id="@+id/action_weatherFragment_to_mapFragment"
            app:destination="@id/mapFragment" />
        <action
            android:id="@+id/action_weatherFragment_to_listSaveSityFragment"
            app:destination="@id/listSaveCityFragment"/>
    </fragment>
    <fragment
        android:id="@+id/searchFragment"
        android:name="com.geektech.weatherapp.ui.weatherFragments.searchFragments.SearchFragment"
        android:label="fragment_search"
        tools:layout="@layout/fragment_search">
        <action
            android:id="@+id/action_searchFragment_to_weatherFragment2"
            app:destination="@id/weatherFragment">
            <!--<argument
                android:name="city"
                app:argType="string"
                app:nullable="false" />-->
        </action>


    </fragment>
    <fragment
        android:id="@+id/mapFragment"
        android:name="com.geektech.weatherapp.ui.googlemap.MapFragment"
        android:label="fragment_map"
        tools:layout="@layout/fragment_map">
        <action
            android:id="@+id/action_mapFragment_to_weatherFragment"
            app:destination="@id/weatherFragment">
            <argument
                android:name="lat"
                app:argType="string"
                app:nullable="false" />
            <argument
                android:name="lon"
                app:argType="string"
                app:nullable="false" />
        </action>
    </fragment>
    <fragment
        android:id="@+id/listSaveCityFragment"
        android:name="com.geektech.weatherapp.ui.listsavecity.ListSaveCityFragment"
        android:label="fragment_list_save_sity"
        tools:layout="@layout/fragment_list_save_sity">
        <action
            android:id="@+id/action_listSaveSityFragment_to_weatherFragment"
            app:destination="@id/weatherFragment">
            <argument
                android:name="position"
                app:argType="integer"
                app:nullable="false" />
        </action>
    </fragment>
</navigation>